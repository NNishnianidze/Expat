{% extends 'form-head.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('new-password') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('new-password') }}
{% endblock %}

{% block content %}
<div class="container top mb-2">
    <h4 class="card-title mt-3 text-center">New password</h4>
</div>
 
<div class="container d-flex align-items-center justify-content-center">
	<form class="login-form" action="/new-password" method="post">

        <input name="email" class="form-control" type="hidden" value="{{ get.email }}">
        <input name="token" class="form-control" type="hidden" value="{{ get.token }}">


        <div class="form-group input-group mt-2">
            <input name="password" class="form-control {{ errors.password ? 'is-invalid' : '' }}" placeholder="Password" type="password">
        </div>
        <div class="invalid-feedback d-block">
            {{ errors.password| first }}
        </div>

		<div class="form-group input-group mt-2">
            <input name="confirmPassword" class="form-control {{ errors.confirmPassword ? 'is-invalid' : '' }}" placeholder="Repeat Password" type="password">
        </div>
        <div class="invalid-feedback d-block">
            {{ errors.confirmPassword| first }}
        </div>

        <div class="form-group mt-2">
            <button name="submit" type="submit" class="btn btn-primary btn-block"> Submit </button>
        </div>
    </form>
</div>   
{% endblock %}