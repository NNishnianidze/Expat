{% extends 'form-head.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('password-reset') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('password-reset') }}
{% endblock %}

{% block content %}
<div class="container py-5 h-100 mt-4">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-light text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <h2 class="fw-bold mb-5 text-uppercase text-primary d-flex justify-content-center align-items-center">
                            Reset Password
                        </h2>
                        <form class="login-form" action="/password-reset" method="post">

                            {% if success is defined %}
                            <div class="alert alert-success" role="alert">
                                <p>Please check your Email for Password Reset Link!</p>
                            </div>
                            {% endif %}

                            <div class="form-group input-group mt-2">
                                <input name="email" class="form-control form-control-lg {{ errors.email ? 'is-invalid' : '' }}" placeholder="Email" placeholder="Username" value="{{ old.email }}" type="email">
                            </div>
                            <div class="invalid-feedback d-block">
                                {{ errors.email| first }}
                            </div>
                            
                            <div class="form-group mt-2">
                                <button name="submit" type="submit" class="btn btn-primary btn-block btn-lg mt-4"> Submit </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}