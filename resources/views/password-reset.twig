{% extends 'form-head.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('password-reset') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('password-reset') }}
{% endblock %}

{% block content %}
<div class="container top mb-2">
    <h4 class="card-title mt-3 text-center">Reset password</h4>
</div>
 
<div class="container d-flex align-items-center justify-content-center">
	<form class="login-form" action="/password-reset" method="post">

        {% if success is defined %}
        <div class="alert alert-success" role="alert">
            <p>Please check your Email for Password Reset Link!</p>
        </div>
        {% endif %}

        <div class="form-group input-group mt-2">
            <input name="email" class="form-control {{ errors.email ? 'is-invalid' : '' }}" placeholder="Email" type="email">
        </div>
        <div class="invalid-feedback d-block">
            {{ errors.email| first }}
        </div>}
        
        <div class="form-group mt-2">
            <button name="submit" type="submit" class="btn btn-primary btn-block"> Submit </button>
        </div>
    </form>
</div>
{% endblock %}