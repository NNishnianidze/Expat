{% extends 'form-head.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}

{% block content %}
<div class="container top mb-2">
    <h4 class="card-title mt-3 text-center">Log In</h4>
</div>
 
<div class="container d-flex align-items-center justify-content-center">
    <form action="/login" method="post" class="form-signin">

        {% if success is defined %}
        <div class="alert alert-success" role="alert">
            <p>Successfully Changed Password!</p>
        </div>
        {% endif %}

        <div class="form-group input-group mt-2">
            <input name="email" class="form-control {{ errors.email ? 'is-invalid' : '' }}" placeholder="Username" type="email">
        </div>
        <div class="invalid-feedback d-block">
            {{ errors.email| first }}
        </div>


        <div class="form-group input-group mt-2">
            <input name="password" class="form-control {{ errors.password ? 'is-invalid' : '' }}" placeholder="Password" type="password">
        </div>
        <div class="invalid-feedback d-block">
            {{ errors.password| first }}
        </div>
        
        <div class="form-group mt-2">
            <button name="submit" type="submit" class="btn btn-primary btn-block"> Log In </button>
        </div>
        <p class="text-center mt-2">Forgot Password?
            <a href="/password-reset">Reset Password</a>
        </p>
        <p class="text-center">Don't have an account?
            <a href="/register">Register</a>
        </p>
    </form>
</div>   
{% endblock %}