{% extends 'form-head.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('register') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('register') }}
{% endblock %}

{% block content %}
<div class="container py-5 h-100 mt-4">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-light text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <h2 class="fw-bold mb-5 text-uppercase text-primary d-flex justify-content-center align-items-center">
                            <img src="{{ asset('build/images/logo.png') }}" width="64" height="64"
                                    alt="Expennies Logo" />
                            Register
                        </h2>
                        <form action="/register" method="post" class="form-signin">
                            {{ csrf.fields | raw }}

                            <div class="form-group input-group mt-4">
                                <input name="name" class="form-control form-control-lg {{ errors.name ? 'is-invalid' : '' }}" placeholder="Name" value="{{ old.name }}" type="text">
                            </div>
                            <div class="invalid-feedback d-block">
                                {{ errors.name| first }}
                            </div>

                            <div class="form-group input-group mt-4">
                                <input name="username" class="form-control form-control-lg {{ errors.username ? 'is-invalid' : '' }}" placeholder="Username" value="{{ old.username }}" type="text">
                            </div>
                            <div class="invalid-feedback d-block">
                                {{ errors.username| first }}
                            </div>

                            <div class="form-group input-group mt-4">
                                <input name="email" class="form-control form-control-lg {{ errors.email ? 'is-invalid' : '' }}" placeholder="Email address" value="{{ old.email }}" type="email">
                            </div>
                            <div class="invalid-feedback d-block">
                                {{ errors.email| first }}
                            </div>

                            <div class="form-group input-group mt-4">
                                <input name="password" class="form-control form-control-lg {{ errors.password ? 'is-invalid' : '' }}" placeholder="Password" type="password">
                            </div>
                            <div class="invalid-feedback d-block">
                                {{ errors.password| first }}
                            </div>

                            <div class="form-group input-group mt-4">
                                <input name="confirmPassword" class="form-control form-control-lg {{ errors.confirmPassword ? 'is-invalid' : '' }}" placeholder="Confirm password" type="password">
                            </div>
                            <div class="invalid-feedback d-block">
                                {{ errors.confirmPassword| first }}
                            </div>

                            <div class="form-group mt-4">
                                <button name="submit" type="submit" class="btn btn-primary btn-block btn-lg"> Create Account </button>
                            </div>
                            <p class="mt-4 text-dark">Have an account?
                                    <a href="/login" class="text-primary fw-bold">Login</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}