{% extends 'form-head.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('register') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('register') }}
{% endblock %}

{% block content %}
<div class="container top mb-2">
    <h4 class="card-title mt-3 text-center">Sign up</h4>
</div>

<div class="container d-flex align-items-center justify-content-center">
    <form action="/register" method="post" class="form-signin">

        <div class="form-group input-group mt-2">
            <input name="name" class="form-control {{ errors.name ? 'is-invalid' : '' }}" placeholder="Name" value="{{ old.name }}" type="text">
        </div>
        <div class="invalid-feedback d-block">
            {{ errors.name| first }}
        </div>

        <div class="form-group input-group mt-2">
            <input name="username" class="form-control {{ errors.username ? 'is-invalid' : '' }}" placeholder="Username" value="{{ old.username }}" type="text">
        </div>
        <div class="invalid-feedback d-block">
            {{ errors.username| first }}
        </div>

        <div class="form-group input-group mt-2">
            <input name="email" class="form-control {{ errors.email ? 'is-invalid' : '' }}" placeholder="Email address" value="{{ old.email }}" type="email">
        </div>
        <div class="invalid-feedback d-block">
            {{ errors.email| first }}
        </div>

        <div class="form-group input-group mt-2">
            <input name="password" class="form-control {{ errors.password ? 'is-invalid' : '' }}" placeholder="Password" type="password">
        </div>
        <div class="invalid-feedback d-block">
            {{ errors.password| first }}
        </div>

        <div class="form-group input-group mt-2">
            <input name="confirmPassword" class="form-control {{ errors.confirmPassword ? 'is-invalid' : '' }}" placeholder="Confirm password" type="password">
        </div>
        <div class="invalid-feedback d-block">
            {{ errors.confirmPassword| first }}
        </div>

        <div class="form-group mt-2">
            <button name="submit" type="submit" class="btn btn-primary btn-block"> Create Account </button>
        </div>
        <p class="text-center">Have an account?
            <a href="/login">Log In</a>
        </p>
    </form>
</div> 
{% endblock %}